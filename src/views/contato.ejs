<%- include("includes/head") %> <%- include("includes/nav") %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato</p>

      <%- include("includes/messages") %>
      <form action="/contato/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label for="inputText1" class="form-label"
                >Nome</label
              >
              <input
                type="text"
                class="form-control mb-3"
                name="nome"
                value="<%= contato.nome %>"
                id="inputText1"
                aria-describedby="emailHelp"
              />
            <div class="mb-3">
              <label for="inputText2" class="form-label"
                >Sobrenome</label
              >
              <input
                type="text"
                class="form-control mb-3"
                name="sobrenome"
                value="<%= contato.sobrenome %>"
                id="inputText2"
                aria-describedby="emailHelp"
              />
            <div class="mb-3">
              <label for="inputEmail" class="form-label"
                >E-mail</label
              >
              <input
                type="email"
                class="form-control mb-3"
                name="email"
                value="<%= contato.email %>"
                id="inputEmail"
                placeholder="contato@gmail.com"
                aria-describedby="emailHelp"
              />
            <div class="mb-3">
              <label for="inputTel" class="form-label"
                >Telefone</label
              >
              <input
                type="tel"
                class="form-control mb-3"
                name="telefone"
                value="<%= contato.telefone %>"
                id="inputTel"
                placeholder="(00) 00000-0000"
                aria-describedby="emailHelp"
              />
            <button type="submit" class="btn btn-primary">Salvar</button>
          </form>

    </div>
    <div class="col-lg-2"></div>
  </div>
  <%- include("includes/footer") %>
</div>
